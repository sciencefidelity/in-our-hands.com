---
import Navbar from "../components/Navbar.astro"

const { siteName, subtitle } = Astro.props as {
  siteName: string
  subtitle: string
}
---
<header class="outer bg-rose-500">
  <div class="inner mx-auto leading-8 py-3">
    <Navbar siteName={siteName} />
  </div>
  <div class="text-center text-white mt-20 pb-32">
    <h1 class="text-5xl font-bold">{siteName}</h1>
    <p class="text-2xl leading-10">{subtitle}</p>
  </div>
</header>
