---
import { Markdown } from "astro/components"
import groq from "groq"
import sanityClient from "../../sanityClient"
import BaseLayout from "../../layouts/BaseLayout.astro"

export async function getStaticPaths() {
  const query = groq`*[_type == "category"] | order(title){
    _id,
    "posts": *[_type == "post" && references(^._id)] | order(publishedAt desc){
      publishedAt, title, slug
    },
    "slug": slug.current,
    title,
    _id
  }[count(posts) > 0]`
  const data = await sanityClient.fetch(query).then(response => response)
  return data.map(category => {
    return {
      params: { slug: category.slug },
      props: { category }
    }
  })
}

const { slug } = Astro.request.params
const { category } = Astro.props

const options = {
  weekday: "long",
  year: "numeric",
  month: "long", day: "numeric"
}

const metaTitle = `Category: ${category.title}`
---
<BaseLayout title={metaTitle}>
  <div>
    <h1>Category: {category.title}</h1>
    <br>
    <ul>
      {category.posts.map(item =>
        <li><a href=`/blog/${item.slug.current}`>{item.title}</a><br>
          {new Date(item.publishedAt).toLocaleDateString("en-GB", options)}
        </li>
      )}
    </ul>
    <br>
    <p><a href="/categories">All categories</a></p>
  </div>
</BaseLayout>

