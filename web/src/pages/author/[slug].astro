---
import { Markdown } from "astro/components"
import groq from "groq"
import sanityClient from "../../sanityClient"
import BaseLayout from "../../layouts/BaseLayout.astro"

export async function getStaticPaths({ paginate }) {
  const query = groq`*[_type == "author"] | order(name){
    bio,
    name,
    "posts": *[_type == "post" && author._ref == ^._id]{title, slug},
    "slug": slug.current
  }`
  const data = await sanityClient.fetch(query).then(response => response)
  return data.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post }
    }
  })
}

const { slug } = Astro.request.params
const { post } = Astro.props
---
<BaseLayout title={post.title}>
  <div>
    <h1>{post.name}</h1>
    <br>
    <h2>Bio</h2>
    <Markdown>{post.bio}</Markdown>
    <br>
    <h2>Posts</h2>
    <ul>{post.posts.map(item => <li><a href=`/blog/${item.slug.current}`>{item.title}</a></li>)}
  </div>
</BaseLayout>

